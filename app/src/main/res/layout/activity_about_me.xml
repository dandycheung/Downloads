<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E4E4E4"
    tools:context=".ui.AboutMeActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#17AAE2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="关于我"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorCard"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:contentPadding="3dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:textIsSelectable="true"
                    android:text="本项目为开源项目, 禁止用于商业用途\n项目地址:\nhttps://github.com/mundane799699/Downloads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"
                    />



            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorCard"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:contentPadding="3dp"
            >

            <TextView
                android:layout_margin="10dp"
                android:textIsSelectable="true"
                android:id="@+id/tv_author"
                android:text="产品问题请发邮件至799699348@qq.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorCard"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:contentPadding="3dp"
            >

            <TextView
                android:layout_margin="10dp"
                android:textIsSelectable="true"
                android:id="@+id/tv_api"
                android:text="使用的api:\nhttps://tenapi.cn\n非常感谢"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_reward"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorCard"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:contentPadding="3dp">

            <TextView
                android:textColor="@color/colorText"
                android:text="请我喝杯咖啡"
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>