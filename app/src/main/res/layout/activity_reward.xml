<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    android:orientation="vertical"
    tools:context=".ui.RewardActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#17AAE2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="打赏我"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorCard"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:contentPadding="3dp"
            >

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="我利用有限的业余时间开发了抖音下载，虽然它还不完善，但正在努力前行。\n如果你觉得我的作品帮助了你，可以打赏来支持我。\n所有的打赏都将用来：\n提升我的积极性，从而在更新之后提供更好的用户体验"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorCard"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:contentPadding="3dp"
            >

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_reward_wx"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/reward_wx"
                    />

                <ImageView
                    android:id="@+id/iv_reward_alipay"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/reward_alipay"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_about_award"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorCard"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:contentPadding="3dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="长按图片保存收款码"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                />
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>